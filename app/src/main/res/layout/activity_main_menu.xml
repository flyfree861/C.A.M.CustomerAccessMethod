<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient"
    tools:context=".MainMenu"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins"
            android:text="Dashboard"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/poppins"
            android:text="Main menu"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="italic" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMainMenuNewConnection"
        android:layout_width="370dp"
        android:layout_height="88dp"
        android:layout_marginTop="75dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:background="@drawable/layou_round"
        android:drawableLeft="@drawable/ic_new_connection_48"
        android:fontFamily="@font/poppins"
        android:soundEffectsEnabled="true"
        android:text="Create new connection"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        app:cornerRadius="50dp"
        app:srcCompat="@drawable/ic_new_connection" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMainMenuShowConnection"
        android:layout_width="371dp"
        android:layout_height="91dp"
        android:layout_gravity="center"
        android:background="@drawable/layou_round"
        android:backgroundTint="@null"
        android:drawableLeft="@drawable/ic_show_connection_48"
        android:fontFamily="@font/poppins"
        android:soundEffectsEnabled="true"
        android:text="Show all connection"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:backgroundTint="@null"
        app:cornerRadius="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMainMenuShowExpiredConnection"
        android:layout_width="371dp"
        android:layout_height="91dp"
        android:layout_gravity="center"
        android:background="@drawable/layou_round"
        android:backgroundTint="@null"
        android:paddingLeft="20dp"
        android:drawableLeft="@drawable/ic_expire_date_48"
        android:fontFamily="@font/poppins"
        android:soundEffectsEnabled="true"
        android:text="Show expired connection"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        app:backgroundTint="@null"
        app:cornerRadius="10dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMainMenuSetting"
        android:layout_width="371dp"
        android:layout_height="91dp"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="75dp"
        android:background="@drawable/layou_round"
        android:backgroundTint="@null"
        android:drawableLeft="@drawable/ic_setting_48x48"
        android:fontFamily="@font/poppins"
        android:soundEffectsEnabled="true"
        android:layout_marginTop="20dp"
        android:text="Setting"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        app:cornerRadius="10dp"/>

</LinearLayout>