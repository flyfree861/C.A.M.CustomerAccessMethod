<?xml version="1.0" encoding="UTF-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners
        android:radius="10dp"/>

    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp"/>

    <stroke
        android:width="1dp"
        android:color="#CCCCCC"/>

    <gradient
        android:startColor="#00B2FC"
        android:centerColor="#0080FB"
        android:endColor="#0051FB"
        android:type="linear"
        android:angle="130"/>
</shape>